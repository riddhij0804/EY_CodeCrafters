# Vertex AI Configuration for Sales Agent
# Copy this to .env and fill in your actual values

# =============================================================================
# VERTEX AI SETTINGS
# =============================================================================

# Your Google Cloud Project ID
# Get this from: https://console.cloud.google.com
VERTEX_PROJECT_ID=your-gcp-project-id-here

# Vertex AI Region (choose closest to your users)
# Options: us-central1, us-east4, europe-west4, asia-southeast1
VERTEX_LOCATION=us-central1

# Path to your Google Cloud service account JSON key file
# Can be absolute or relative path
GOOGLE_APPLICATION_CREDENTIALS=./vertex-key.json

# =============================================================================
# MODEL CONFIGURATION (Optional - defaults are optimized)
# =============================================================================

# Gemini model for intent detection
# Options: 
#   - gemini-1.5-flash-002 (recommended: fast + cheap)
#   - gemini-1.5-pro-002 (higher accuracy, slower)
VERTEX_MODEL=gemini-1.5-flash-002

# Temperature for intent classification (0.0-1.0)
# Lower = more consistent, Higher = more creative
# Default: 0.2 (recommended for classification tasks)
VERTEX_TEMPERATURE=0.2

# Maximum tokens for intent detection response
# Default: 512 (sufficient for structured JSON output)
VERTEX_MAX_TOKENS=512

# =============================================================================
# PERFORMANCE TUNING (Optional)
# =============================================================================

# Enable intent caching for repeated queries (true/false)
# Reduces API calls and costs
VERTEX_ENABLE_CACHE=true

# Cache TTL in seconds (default: 3600 = 1 hour)
VERTEX_CACHE_TTL=3600

# Timeout for Vertex AI API calls in seconds
VERTEX_TIMEOUT=10

# =============================================================================
# FALLBACK BEHAVIOR (Optional)
# =============================================================================

# Enable automatic fallback to rule-based detection (true/false)
# Recommended: true (ensures system always works)
VERTEX_ENABLE_FALLBACK=true

# Minimum confidence threshold to trust Vertex AI result
# If below threshold, use rule-based as backup (0.0-1.0)
VERTEX_MIN_CONFIDENCE=0.6

# =============================================================================
# LOGGING & MONITORING (Optional)
# =============================================================================

# Log level for Vertex AI detector
# Options: DEBUG, INFO, WARNING, ERROR
VERTEX_LOG_LEVEL=INFO

# Enable detailed request/response logging (true/false)
# Useful for debugging, but increases log volume
VERTEX_VERBOSE_LOGGING=false

# =============================================================================
# COST CONTROLS (Optional)
# =============================================================================

# Maximum API calls per minute (rate limiting)
# Prevents unexpected costs from traffic spikes
VERTEX_MAX_CALLS_PER_MINUTE=1000

# Enable cost tracking (true/false)
VERTEX_TRACK_COSTS=true

# =============================================================================
# EXISTING LLM SETTINGS (Keep your current values)
# =============================================================================

# Groq API Key (for conversation generation)
GROQ_API_KEY=your-groq-api-key

# Google Generative AI (if using)
GOOGLE_API_KEY=your-google-api-key

# =============================================================================
# NOTES
# =============================================================================

# 1. To get started quickly:
#    - Set VERTEX_PROJECT_ID
#    - Set GOOGLE_APPLICATION_CREDENTIALS path
#    - Leave other settings as defaults

# 2. Service Account Permissions Required:
#    - roles/aiplatform.user
#    - roles/logging.viewer (optional, for monitoring)

